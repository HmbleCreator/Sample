# Use official Node.js image
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy the rest of the app
COPY . .

# Expose dev port
EXPOSE 3000

# Start app in dev mode (or use next build if needed)
CMD ["npx", "next", "dev", "-p", "3000"]
